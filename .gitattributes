    const saveBtn = document.getElementById("saveBtn");

saveBtn.addEventListener("click", () => {
  const user = auth.currentUser;
  if (user) {
    guardarDatosEnFirestore(user.uid);
  } else {
    alert("Debes iniciar sesión para guardar tus datos.");
  }
});


